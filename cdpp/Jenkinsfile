pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9' // Jenkins에서 설정한 Maven 이름
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('cdpp') { // 여기가 핵심
                    powershell 'mvn clean install'
                }
            }
        }

        stage('Run Application') {
            steps {
                dir('cdpp') {
                    powershell 'java -jar target/spring-boot-starter-parent.jar' // ← 빌드된 JAR 이름에 맞게 수정
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Build Successful!'
        }
        failure {
            echo 'Build Failed!'
        }
    }
}
